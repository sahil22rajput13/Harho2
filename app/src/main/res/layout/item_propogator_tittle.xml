<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rectangle_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rlPropogatorTittleGone"
        android:layout_width="105dp"
        android:visibility="visible"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:background="@drawable/propogator_rectangle"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tvTittleGone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="#95A799"
            android:text="@string/propagator_"
            android:lineSpacingExtra="5sp"
            android:translationY="-2.66sp"
            android:gravity="center"
            />
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPropogatorLine"
        android:layout_width="20dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/rlPropogatorTittleGone"
        android:background="@drawable/propogator_line"
        app:layout_constraintLeft_toRightOf="@id/rlPropogatorTittleGone"
        app:layout_constraintBottom_toBottomOf="@id/rlPropogatorTittleGone"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/rlPropogatorTittleVisible"
        android:layout_width="105dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/propogator_rectangle_visible"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tvTittleVisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/propagator_"
            android:textAppearance="@style/propagator_"
            android:lineSpacingExtra="5sp"
            android:translationY="-2.66sp"
            android:gravity="center"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>